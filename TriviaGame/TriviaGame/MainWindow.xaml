<Window x:Class="TriviaGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriviaGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="Question" Content="    How many generations are &#xD;&#xA;    there currently in pokemon?" HorizontalAlignment="Left" Margin="80,40,0,0" VerticalAlignment="Top" Width="360" Height="80" BorderThickness="0" FontSize="24"/>
        <TextBox x:Name="Answer" HorizontalAlignment="Left" Height="23" Margin="80,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="360"/>
        <Button x:Name="Enter" Content="Enter" HorizontalAlignment="Left" Margin="220,222,0,0" VerticalAlignment="Top" Width="75" Click="Enter_Click"/>
        <TextBlock x:Name="Result" HorizontalAlignment="Left" Margin="220,265,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" Height="23"/>

    </Grid>
</Window>
